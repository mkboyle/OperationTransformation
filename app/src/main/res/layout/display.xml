<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/drawer_layout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:foregroundGravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_above="@+id/TVusername" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight Tracker"
        android:background="@color/button"
        android:textColor="@color/buttonText"
        android:id="@+id/Btracker"
        android:onClick="onClickButton"
        android:layout_above="@+id/Bfitness"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitness Plan"
        android:background="@color/button"
        android:textColor="@color/buttonText"
        android:id="@+id/Bfitness"
        android:onClick="onClickButton"
        android:layout_above="@+id/Bdiet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diet Plan"
        android:background="@color/button"
        android:textColor="@color/buttonText"
        android:id="@+id/Bdiet"
        android:onClick="onClickButton"
        android:layout_above="@+id/Bfacebook"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook"
        android:background="@color/button"
        android:textColor="@color/buttonText"
        android:id="@+id/Bfacebook"
        android:onClick="onClickButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome "
        android:layout_marginRight="20dp"
        android:id="@+id/textView"
        android:layout_above="@+id/Btracker" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/TVusername"
        android:layout_above="@+id/Btracker" />


